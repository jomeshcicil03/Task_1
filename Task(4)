#include <iostream>
using namespace std;
int main() {
    int number;
    cout << "Enter a number to check if it is positive: ";
    cin >> number;
    if (number > 0) {
        cout << "The number is positive." << endl;
    }
    cout << "\nEnter a number to check if it is even or odd: ";
    cin >> number;

    if (number % 2 == 0) {
        cout << "Even number." << endl;
    } else {
        cout << "Odd number." << endl;
    }
    int marks;
    cout << "\nEnter your marks (0 - 100): ";
    cin >> marks;
    if (marks >= 90) {
        cout << "Grade: A+" << endl;
    } else if (marks >= 75) {
        cout << "Grade: A" << endl;
    } else if (marks >= 60) {
        cout << "Grade: B" << endl;
    } else if (marks >= 40) {
        cout << "Grade: C" << endl;
    } else {
        cout << "Grade: Fail" << endl;
    }
    int day;
    cout << "\nEnter a number (1-7) to display day of the week: ";
    cin >> day;
    switch (day) {
        case 1: cout << "Sunday" << endl; break;
        case 2: cout << "Monday" << endl; break;
        case 3: cout << "Tuesday" << endl; break;
        case 4: cout << "Wednesday" << endl; break;
        case 5: cout << "Thursday" << endl; break;
        case 6: cout << "Friday" << endl; break;
        case 7: cout << "Saturday" << endl; break;
        default: cout << "Invalid input. Please enter a number between 1 and 7." << endl;
    }
    return 0;
}
